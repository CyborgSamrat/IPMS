@model IdentitySample.Models.Complaint

@{
    ViewBag.Title = "Assign Technician";
}

<h2 style="text-align:right">Assign Technician</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Complaint</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ComplaintId)
        @Html.HiddenFor(model => model.LodgedOn)
        @Html.HiddenFor(model => model.IsSolved)
        @Html.HiddenFor(model => model.IsAssigned, new { @value = true })
        @Html.HiddenFor(model => model.Status)
        @Html.HiddenFor(model => model.Issue)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.LodgedBy)
        @Html.HiddenFor(model => model.DeviceId)



        <div class="form-group">
            @Html.LabelFor(model => model.AssignedTo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-required="The AssignedTo field is required." id="AssignedTo" name="AssignedTo">

                    <option value="TC001">TC001</option>
                    <option value="TC002">TC002</option>
                    <option value="TC003">TC003</option>
                    <option value="TC004">TC004</option>
                    <option value="TC005">TC005</option>
                    <option value="TC006">TC006</option>
                    <option value="TC007">TC007</option>
                    
                </select>
                @Html.ValidationMessageFor(model => model.AssignedTo, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
